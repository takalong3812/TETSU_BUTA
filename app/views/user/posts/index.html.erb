<div class="col-md-8 offset-md-1">
<h1>タグ検索一覧</h1>
 <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th>ユーザー</th>
      <th>タイトル</th>
      <th>感想</th>
      <th>住所</th>
      <th colspan="3"></th>
     </tr>
    </thead>
     <tbody>
      <% @posts.each do |post| %>
      <tr>
       <td>
        <%= link_to user_user_path(post.user) do %>
        <%= image_tag post.user.image, size: "50x50" %>
        <% end %>
       </td>
       <td><%= link_to post.title, user_post_path(post.id)%></td>
       <td><%= post.impression %></td>
       <td><%= post.address %></td>
      </tr>
      <% end %>
     </tbody>
   </table>
  </div> 
  
 
  
 