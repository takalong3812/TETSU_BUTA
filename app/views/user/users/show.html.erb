<div class="container user-page">
  <p class="text-center pt-2"><%= notice %></p>
  
   <h2>ユーザー情報</h2>
       <%= image_tag @user.image, size: "100x100" %>
     <table class="table">
        <tbody>
         <tr>
          <th>ユーザー名</th>
          <th><%= @user.name %></th>
         </tr>
         <tr>
          <th>プロフィール</th>
          <th><%= @user.introduction %></th>
         </tr>
        </tbody> 
      </table>
      <div class="row">
         <%= link_to edit_user_user_path(@user.id), class: 'btn btn-outline-secondary btn-block' do %>
         <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      
  
  
  <h2 class="mt-3">新規投稿</h2>
  <%= form_with model:@post,url: user_posts_path, local:true do |f| %> 
   <div class="form-group">
     <label>画像</label>
      <%= f.file_field :image, accept: "image/*" %>
   </div>
   
   <div class="form-group">
    <label>タイトル</label>
      <%= f.text_field :title %>
   </div>
   
   <div class="form-group">
    <label>感想</label>
      <%= f.text_area :impression %>
   </div>
   
   <div class="form-group">
      <%= button_tag :type => "submit", :class=>"btn btn-default btn-s-md" do %>
       <i class="fas fa-circle"></i>投稿
   </div>    
   <% end %>  
  </div> 
 <% end %>
     
  
  <div class="col-md-8 offset-md-1">
   <h2>他者投稿一覧</h2>
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th>タイトル</th>
      <th>感想</th>
      <th colspan="3"></th>
     </tr>
    </thead>
     <tbody>
      <% @posts.each do |post| %>
      <tr>
       <td>
        <%= link_to user_user_path(post.user) do %>
        <%= image_tag post.user.image, size: "50x50" %>
        <% end %>
       </td>
       <td><%= link_to post.title, url:user_post_path(post.id) %></td>
       <td><%= post.impression %></td>
      </tr>
      <% end %>
     </tbody>
   </table>
  </div> 
      
      
      
      
      
      